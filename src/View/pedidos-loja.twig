        <div>
            <h1>Pedido - {{pedido.id_pedido}}</h1>  
            <span>Nome do produto: {{pedido.nome}} - Codigo: {{pedido.codigo}}</span>
            <br>
            <span>Quantidade: {{pedido.quantidade}}</span>
            <br>
            <span>Pre√ßo: {{pedido.preco}}</span>
            <br>
        </div>
        {% if pedido == ultimo %}
            <br>
            <h4 style="color:red">Total Compra: R${{pedido.total}}</h4>
        {% endif %}
        <hr>
    {% endfor %}

{% endblock %}

