{% extends "master.twig" %}

{% block conteudo %}
    {{ parent() }}
    <section class="content-user flex flex-column">
        {{ include('componentes/menu_user.twig') }}
        <div class="pedidos-content flex flex-center-flex-start flex-column">
            <form  class="flex flex-column flex-align-center" id="form-cadastro-endereco" action="/acao-cadastrar-endereco" method="POST">
                <div class="row-form-cadastro flex flex-align-center flex-justify-end">
                    <label>Nome do destinatário*</label>
                    <input type="text" name="nome">
                </div>
                <div class="row-form-cadastro flex flex-align-center flex-justify-end">
                    <label>CEP*</label>
                    <input type="text" name="cep">
                </div>
                <div class="row-form-cadastro flex flex-align-center flex-justify-end">
                    <label>Endereço*</label>
                    <input type="text" name="logradouro">
                </div>
                <div class="row-form-cadastro flex flex-align-center flex-justify-end">
                    <label>Número*</label>
                    <input type="text" name="numero">
                </div>
                <div class="row-form-cadastro flex flex-align-center flex-justify-end">
                    <label>Complemento</label>
                    <input type="text" name="complemento">
                </div>
                <div class="row-form-cadastro flex flex-align-center flex-justify-end">
                    <label>Referência*</label>
                    <input type="text" name="referencia">
                </div>
                <div class="row-form-cadastro flex flex-align-center flex-justify-end">
                    <label>Bairro</label>
                    <input type="text" name="bairro">
                </div>
                <div class="row-form-cadastro flex flex-align-center flex-justify-end">
                    <label>Cidade*</label>
                    <input type="text" name="cidade">
                </div>
                <div class="row-form-cadastro flex flex-align-center flex-justify-end">
                    <label>Estado*</label>
                    <input type="text" name="uf">
                </div>
                <button for="form-cadastro-endereco" class="btn flex flex-center-center">Adicionar</button>
            </form>
        </div>
    </section>

{% endblock  %}
